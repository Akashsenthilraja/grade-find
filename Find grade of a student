#include<stdio.h>
int main()
{
   int mark;
   char grade;

   
   printf("Enter score(0-100):  ");
   scanf("%d",&mark);

   
   if(mark<0 || mark>100) 
{
     printf("Invalid mark");
}

    else
    printf("valid mark\n");

   
   if(mark>=85 && mark<=100)
     printf("grade = 'A'");

   
   else if(mark>=70)
     printf("grade = 'B'");

   
   else if(mark>=55)
     printf("grade = 'C'");

   
   else if(mark>=40)
     printf("grade = 'D'");

   
   else
     printf("grade = 'F'");

  

   return 0;
}
